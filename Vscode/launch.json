{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Worker Interface",
      "port": 9229,
      "restart": true,
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}/packages/worker-interface",
      "outFiles": ["${workspaceFolder}/packages/worker-interface/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug Worker WebApp",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/packages/worker-webapp",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Debug All",
      "configurations": ["Debug Worker Interface", "Debug Worker WebApp"]
    }
  ]
} 