{
  "name": "mindburn-aletheia",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "migrations:plan": "ts-node scripts/migrations/plan.ts",
    "migrations:apply": "ts-node scripts/migrations/apply.ts",
    "migrations:verify": "ts-node scripts/migrations/verify.ts",
    "migrations:rollback": "ts-node scripts/migrations/rollback.ts",
    "test:migrations": "jest --testPathPattern=infrastructure/migrations",
    "test:unit": "jest --selectProjects unit --coverage",
    "test:integration": "jest --selectProjects integration --coverage",
    "test:e2e": "jest --selectProjects e2e --coverage",
    "test:watch": "jest --watch",
    "test:security": "snyk test && pnpm audit",
    "test:load": "k6 run test/load/scenarios/*.js",
    "test:visual": "reg-suit run",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e",
    "perf:artillery": "artillery run test/performance/artillery/config.yml",
    "perf:artillery:report": "artillery report",
    "perf:lambda-power": "echo \"Lambda power tuning is disabled\"",
    "perf:endurance": "artillery run test/performance/artillery/config.yml --config test/performance/artillery/endurance.yml",
    "perf:spike": "artillery run test/performance/artillery/config.yml --config test/performance/artillery/spike.yml",
    "perf:baseline": "artillery run test/performance/artillery/config.yml --output baseline.json",
    "perf:compare": "artillery compare baseline.json current.json",
    "analyze:duplication": "node scripts/analysis/analyze-duplication.js",
    "analyze:duplication:plan": "node scripts/analysis/analyze-duplication.js --generate-plan",
    "analyze:dependencies": "npx depcheck",
    "analyze:graph": "npx turbo run build --graph=dependency-graph.png",
    "refactor:list-enhanced": "grep -r --include='*.ts' 'Enhanced\\|Advanced\\|V[0-9]' --include='*.tsx' .",
    "refactor:unused-deps": "npx depcheck",
    "refactor:circular": "npx madge --circular --extensions ts,tsx .",
    "refactor:rename-preview": "node scripts/refactoring/batchRename.js --dry-run --verbose",
    "refactor:rename": "node scripts/refactoring/batchRename.js",
    "refactor:update-imports-preview": "node scripts/refactoring/updateImports.js --dry-run --verbose",
    "refactor:update-imports": "node scripts/refactoring/updateImports.js",
    "refactor:consolidate-tests-preview": "node scripts/refactoring/consolidateTests.js --dry-run --verbose",
    "refactor:consolidate-tests": "node scripts/refactoring/consolidateTests.js",
    "refactor:consolidate-verification-preview": "node scripts/refactoring/consolidateVerificationLogic.js --dry-run --verbose",
    "refactor:consolidate-verification": "node scripts/refactoring/consolidateVerificationLogic.js",
    "refactor:consolidate-config-preview": "node scripts/refactoring/consolidateConfig.js --dry-run --verbose",
    "refactor:consolidate-config": "node scripts/refactoring/consolidateConfig.js",
    "refactor:consolidate-utils-preview": "node scripts/refactoring/consolidateUtils.js --dry-run --verbose",
    "refactor:consolidate-utils": "node scripts/refactoring/consolidateUtils.js",
    "refactor:validate": "node scripts/refactoring/validateRefactoring.js",
    "refactor:run-all-preview": "node scripts/refactoring/runRefactoring.js --dry-run",
    "refactor:run-all": "node scripts/refactoring/runRefactoring.js"
  },
  "eslintConfig": {
    "plugins": {
      "no-duplicate-patterns": "./scripts/eslint-plugins/no-duplicate-patterns.js"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.3.0",
    "@typescript-eslint/parser": "^7.3.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.8.0",
    "@playwright/test": "^1.43.0",
    "k6": "^0.0.0",
    "reg-suit": "^0.13.0",
    "snyk": "^1.1250.0",
    "testcontainers": "^10.8.0",
    "jest-junit": "^16.0.0",
    "jest-html-reporter": "^3.10.2",
    "artillery": "^2.0.3",
    "artillery-plugin-metrics-by-endpoint": "^1.1.0",
    "artillery-plugin-expect": "^2.2.1",
    "artillery-plugin-cloudwatch": "^0.1.7",
    "autocannon": "^7.12.0",
    "jscpd": "^3.5.10",
    "depcheck": "^1.4.7",
    "glob": "^10.3.10",
    "madge": "^6.1.0"
  },
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=20.0.0"
  }
}